<mvc:View
    controllerName="blackseeds.ratings.controller.Rating"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        showHeader="false"
        class="sapUiContentPadding"
    >
        <subHeader>
            <Toolbar>
                <ToolbarSpacer />
                <Title text="Black Seeds Ratings Application" />
                <ToolbarSpacer />
            </Toolbar>
        </subHeader>
        <content>
            <Panel class="sapUiTinyMarginBottom">
                <HBox justifyContent="SpaceBetween">
                    <Image
                        class="sapUiTinyMarginTopBottom"
                        src="./img/logo.png"
                        width="8rem"
                    />
                    <VBox>
                        <HBox justifyContent="End">
                            <ObjectStatus
                                text="{name}"
                                state="Success"
                                class=" sapUiTinyMarginEnd"
                            />
                            <ObjectStatus
                                state="Success"
                                class=""
                                icon="sap-icon://e-care"
                            />
                        </HBox>
                        <HBox justifyContent="End">
                            <ObjectStatus
                                text="{tagID}"
                                class=" sapUiTinyMarginEnd sapUiTinyMarginTop"
                            />
                            <ObjectStatus
                                class="sapUiTinyMarginTop"
                                icon="sap-icon://blank-tag"
                            />
                        </HBox>
                    </VBox>
                </HBox>
            </Panel>
            <VBox
                id="vbox-atts"
                items="{dataModel>/ratings}"
            >
                <Panel
                    width="100%"
                    class="sapUiResponsiveMargin"
                >
                    <headerToolbar>
                        <OverflowToolbar>
                            <core:Icon
                                src="sap-icon://accept"
                                color="yellow"
                                visible="{= ${dataModel>value} > 0 }"
                            />
                            <Title text=" {dataModel>description}" />
                        </OverflowToolbar>
                    </headerToolbar>
                    <content>
                        <VBox>
                            <HBox visible="{= ${dataModel>type} !== 'slider'}">
                                <RatingIndicator
                                    maxValue="15"
                                    value="{dataModel>value}"
                                    iconSize="16px"
                                />
                                <Label
                                    text="{dataModel>value} / 15"
                                    class="sapUiTinyMarginEnd sapUiTinyMarginTop sapUiSmallMarginBegin"
                                />
                            </HBox>
                            <HBox visible="{= ${dataModel>type} === 'slider'}">
                                <Slider
                                    min="0"
                                    max="15"
                                    step="1"
                                    width="21.7rem"
                                    value="{dataModel>value}"
                                 	showAdvancedTooltip="true"
				                    showHandleTooltip="false"
                                >
                                    <ResponsiveScale
                                        tickmarksBetweenLabels="5"
                                    />
                                </Slider>
                            </HBox>
                            <Input
                                value="{dataModel>comments}"
                                visible="{= ${dataModel>type} !== 'slider'}"
                                placeholder="Add comments"
                                width="90%"
                            />
                            <HBox
                                justifyContent="SpaceBetween"
                                visible="{= ${dataModel>type} === 'slider'}"
                            >
                                <ObjectStatus text="Low" />
                                <ObjectStatus text="Medium" />
                                <ObjectStatus text="High" />
                            </HBox>
                        </VBox>
                    </content>
                </Panel>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <Button
                    text="Cancel"
                    press="onBroBack"
                />
                <ToolbarSpacer />
                <Button
                    text="Save"
                    press="onBroSave"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
