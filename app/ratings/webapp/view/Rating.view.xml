<mvc:View
    controllerName="blackseeds.ratings.controller.Rating"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <App id="app">
        <Page
            showHeader="false"
            class="sapUiContentPadding"
        >
            <subHeader>
                <Toolbar>
                    <ToolbarSpacer />
                    <Title text="{name}" />
                </Toolbar>
            </subHeader>
            <content>
                <VBox
                    id="vbox-atts"
                    items="{/Attributes}"
                >
                    <Panel
                        width="auto"
                        class="sapUiResponsiveMargin"
                    >
                        <headerToolbar>
                            <OverflowToolbar>
                                <Title text="{description}" />
                                <ToolbarSpacer />
                                <!-- <CheckBox selected="{selected}"/> -->
                            </OverflowToolbar>
                        </headerToolbar>
                        <content>
                            <FlexBox>
                                <RatingIndicator
                                    maxValue="5"
                       
                                    value="{value}"
                                />
                                 <Label text="{value} / 5" class="sapUiSmallMarginBeginEnd sapUiTinyMarginTop" />
                                <Input value="{comments}"  />
                            </FlexBox>
                        </content>
                    </Panel>
                </VBox>
            </content>
            <footer>
                <Toolbar>
                    <Button
                        text="Cancel"
                        press="onBroBack"
                    />
                    <ToolbarSpacer />
                    <Button
                        text="Save"
                        press="onBroSave"
                    />
                </Toolbar>
            </footer>
        </Page>
    </App>
</mvc:View>
