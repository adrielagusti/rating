<mvc:View
    controllerName="blackseeds.ratings.controller.Rating"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        showHeader="false"
        class="sapUiContentPadding"
    >
        <subHeader>
            <Toolbar>
                <ToolbarSpacer />
                <Title text="Black Seeds Ratings" />
                <ToolbarSpacer />
            </Toolbar>
        </subHeader>
        <content>
            <Panel class="sapUiTinyMarginBottom">
                <HBox justifyContent="SpaceBetween">
                    <Image
                        class="sapUiTinyMarginTopBottom"
                        src="./img/logo.png"
                        width="8rem"
                    />
                    <VBox>
                        <HBox justifyContent="End">
                            <ObjectStatus
                                text="{strainName}"
                                state="Success"
                                class=" sapUiTinyMarginEnd sapMObjectStatusLarge"
                            />
                            <ObjectStatus
                                state="Success"
                                class="sapUiTinyMarginTop"
                                icon="sap-icon://e-care"
                            />
                        </HBox>
                        <!-- <HBox justifyContent="End" visible="{= ${tagID}.length >= 4 ? true : false }"> -->
                    
                        <HBox justifyContent="End"
                        visible="{= ${strainID} !== undefined ? true : false }">
                            <ObjectStatus
                                text="Planted on {
                                        'path': 'plantedDate',
                                        'type': 'sap.ui.model.type.Date'}"
                                class=" sapUiTinyMarginEnd sapUiTinyMarginTop"
                            />
                            <ObjectStatus
                                class="sapUiTinyMarginTop"
                                icon="sap-icon://history"
                            />
                        </HBox>
                            <HBox
                            justifyContent="End"
                            visible="{= ${strainID} !== undefined ? true : false }"
                        >
                            <ObjectStatus
                                text="# {tagID}"
                                class=" sapUiTinyMarginEnd sapUiTinyMarginTop"
                            />
                            <ObjectStatus
                                class="sapUiTinyMarginTop"
                                icon="sap-icon://tag"
                            />
                        </HBox>
                    </VBox>
                </HBox>
            </Panel>
            <core:Fragment
                fragmentName="blackseeds.ratings.view.fragments.Attributes"
                type="XML"
            />
        </content>
        <footer>
            <Toolbar>
                <Button
                    text="Cancel"
                    press="onBroBack"
                />
                <ToolbarSpacer />
                <Button
                    text="Save"
                    press="onBroSave"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
