<core:FragmentDefinition xmlns:launchpad="sap.ushell.ui.launchpad"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
>
    <Dialog
        title="{= ${collectionModel>/selectedSpecimens}.length }"
        contentWidth="60%"
        busy="{collectionModel>/createDialogBusy}"
           stretch="true"
    >
        <content>
            <f:Form editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="0"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false"
                    />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer >
                        <f:formElements>
                            <f:FormElement >
                                <f:fields>
                                    <List
                                        backgroundDesign="Solid"
                                        items="{dayDetailModel>/applications}"
                                    >
                                        <CustomListItem>
                                            <FlexBox>
                                                <Text
                                                    text="{dayDetailModel>amount} ml of {dayDetailModel>productName}"
                                                />
                                            </FlexBox>
                                        </CustomListItem>
                                    </List>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
            <Image src="https://res.cloudinary.com/hgyusg0s0/image/upload/v1724186961/js7lejkxw66eht8cfujp.jpg"/>
        </content>
        <!-- <beginButton>
            <Button
                text="{i18n>confirm}"
                icon="sap-icon://add"
                type="Emphasized"
                press=".onApplicationConfirmPress"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>cancel}"
                icon="sap-icon://sys-cancel"
                type="Reject"
                press=".onApplicationCancelPress"
            />
        </endButton> -->
    </Dialog>
</core:FragmentDefinition>
