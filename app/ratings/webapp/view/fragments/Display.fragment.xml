<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
>
    <VBox class="sapUiSmallMargin">
        <f:Form editable="false">
            <f:layout>
                <f:ResponsiveGridLayout
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Tag ID">
                            <f:fields>
                                <Text text="#{tagID}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Strain Name">
                            <f:fields>
                                <Text text="{strainName}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Planted On">
                            <f:fields>
                                <Text text="{
                                        'path': 'plantedDate',
                                        'type': 'sap.ui.model.type.DateTime'}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="State">
                            <f:fields>
                                <Text text="{stateDescription}" />
                            </f:fields>
                        </f:FormElement>
                         <f:FormElement label="Generation">
                            <f:fields>
                                <Text text="{strainAlias} {seqNumber}" />
                            </f:fields>
                        </f:FormElement>
						     <f:FormElement label="Last Care">
                            <f:fields>
                                <Text text="{
                                        'path': 'lastCare',
                                        'type': 'sap.ui.model.type.DateTime'}" />
                            </f:fields>
                        </f:FormElement>
                          <f:FormElement label="Specimen name">
                            <f:fields>
                                <Text text="{name}" />
                            </f:fields>
                        </f:FormElement>
                           <f:FormElement label="Parent" visible="{= ${parentID} !== null }">
                            <f:fields>
                                <Link id='link-parent' press="onLinkPress" />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>
