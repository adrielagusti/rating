<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
>
    <Dialog
        title="New Specimen"
        contentWidth="60%"
        busy="{collectionModel>/createDialogBusy}"
        stretch="true"
    >
        <content>
            <f:Form editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="0"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false"
                    />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer title="{i18n>form.specimen}">
                        <f:formElements>
                            <f:FormElement>
                                <f:fields>
                                    <Input
                                        value="{specimenCreationModel>/tagID}"
                                        placeholder="Enter the Specimen TAG ID (14000102)"
                                        type="Number"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:fields>
                                    <HBox>
                                        <CheckBox
                                            activeHandling="true"
                                            displayOnly="false"
                                            editable="true"
                                            enabled="true"
                                            partiallySelected="false"
                                            selected="{specimenCreationModel>/multiple}"
                                            text="Multiple Specimens"
                                            textAlign="Begin"
                                            textDirection="Inherit"
                                            useEntireWidth="false"
                                            valueState="None"
                                            wrapping="false"
                                        />
                                        <StepInput
                                            value="{specimenCreationModel>/value}"
                                            displayValuePrecision="{displayValuePrecision}"
                                            min="1"
                                            change="onChange"
                                            enabled="{= ${specimenCreationModel>/multiple} }"
                                        />
                                    </HBox>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                            <f:FormContainer >
                        <f:formElements>

                            <f:FormElement label="{i18n>form.breedtype}">
                                <f:fields>
                                    <SegmentedButton
                                        selectedKey="{specimenCreationModel>/breedType}"
                                    >
                                        <items>
                                            <SegmentedButtonItem
                                                text="From a Cutting"
                                                key="C"
                                            />
                                            <SegmentedButtonItem
                                                text="Planted a Seed"
                                                key="S"
                                            />
                                        </items>
                                    </SegmentedButton>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:fields>
                                    <Input
                                        value="{specimenCreationModel>/name}"
                                        placeholder="Enter Specimen name (Optional)"
                                        required="true"
                                    />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer title="{i18n>form.strain}">
                        <!-- ID;parentID;breedType;seqNumber;strain_ID;clone;name;comments;tagID -->
                        <f:formElements>
                            <f:FormElement>
                                <f:fields>
                                    <SegmentedButton
                                        selectedKey="{specimenCreationModel>/status}"
                                    >
                                        <items>
                                            <SegmentedButtonItem
                                                text="Existing Strain"
                                                key="existing"
                                            />
                                            <SegmentedButtonItem
                                                text="New Strain"
                                                key="new"
                                            />
                                        </items>
                                    </SegmentedButton>
                                    <MessageStrip
                                        class="sapUiTinyMarginTopBottom"
                                        visible="{= ${specimenCreationModel>/status} === 'new' ? true : false}"
                                        text="{i18n>strip.newstrain}"
                                        type="Warning"
                                        showCloseButton="false"
                                        showIcon="true"
                                    />
                                    <Input
                                        visible="{= ${specimenCreationModel>/status} === 'new' ? true : false}"
                                        value="{specimenCreationModel>/strainName}"
                                        placeholder="Enter the NEW STRAIN name"
                                        required="true"
                                    />
                                    <!-- <Input
                                        visible="{= ${specimenCreationModel>/status} === 'new' ? true : false}"
                                        value="{specimenCreationModel>/strainAlias}"
                                        placeholder="Enter Strain alias"
                                    />
                                    <Input
                                        visible="{= ${specimenCreationModel>/status} === 'new' ? true : false}"
                                        value="{specimenCreationModel>/strainTagID}"
                                        placeholder="Enter Tag ID"
                                    /> -->

                                    <Select
                                        forceSelection="false"
                                        selectedKey="{specimenCreationModel>/strainID}"
                                        autoAdjustWidth="true"
                                        items="{
												path: '/Strains',
												sorter: { path: 'tagID' }
												}"
                                        visible="{= ${specimenCreationModel>/status} === 'new' ? false : true}"
                                        change="onSelectStrain"
                                    >
                                        <core:Item
                                            key="{ID}"
                                            text="{name} "
                                        />
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                label="Clone/Mother"
                                visible="{= ${specimenCreationModel>/status} === 'new' ? false : true }"
                            >
                                <f:fields>
                                    <Select
                                        id="select.specimens"
                                        forceSelection="false"
                                        selectedKey="{specimenCreationModel>/parentID}"
                                        autoAdjustWidth="true"
                                        items="{
												path: '/Specimens',
												sorter: { path: 'name' }
												}"
                                        enabled="{= ${specimenCreationModel>/strainID} !== '' ? true : false }"
                                    >
                                        <core:Item
                                            key="{ID}"
                                            text="{name} "
                                        />
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer title="{i18n>form.extrainfo}">
                        <f:formElements>
                            <f:FormElement label="Planted on">
                                <f:fields>
                                    <DateTimePicker
                                        value="{
                                            'path': 'specimenCreationModel>/plantedDate',
                                            'type': 'sap.ui.model.type.DateTime'}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Comments">
                                <f:fields>
                                    <TextArea
                                        value="{specimenCreationModel>/comments}"
                                    />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </content>
        <beginButton>
            <Button
                text="{i18n>confirm}"
                icon="sap-icon://add"
                type="Emphasized"
                press=".onCreateConfirmPress"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>cancel}"
                icon="sap-icon://sys-cancel"
                type="Reject"
                press=".onCreateCancelPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
