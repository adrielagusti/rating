<mvc:View
    controllerName="blackseeds.ratings.controller.Main"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <App id="app">
        <Page
            showHeader="false"
            class="sapUiContentPadding"
        >
            <subHeader>
                <Toolbar>
                    <ToolbarSpacer />
                    <Select
                        forceSelection="false"
                        selectedKey="{userSelectionModel>/User}"
                    >
                        <items>
                            <core:Item
                                key="Level"
                                text="Level"
                            />
                            <core:Item
                                key="Pepe"
                                text="Pepe"
                            />
                            <core:Item
                                key="Chelok"
                                text="Chelok"
                            />
                        </items>
                    </Select>
                </Toolbar>
            </subHeader>
            <content>
                <List
                    id="idList"
                    items="{/Strains}"
                    selectionChange=".onSelectionChange"
                    mode="SingleSelectMaster"
                    growing="true"
                    growingThreshold="50"
                    includeItemInSelection="true"
                >
                    <infoToolbar>
                        <OverflowToolbar>
                            <Label id="Hola {userSelectionModel>/User}" />
                        </OverflowToolbar>
                    </infoToolbar>
                    <!-- icon="{ProductPicUrl}" -->
                    <StandardListItem
                        title="{name}"
                        description="{breeder}"
                        iconDensityAware="false"
                        iconInset="false"
                        press="asd"
                    />
                </List>
            </content>
            <footer>
                <Toolbar>
                    <ToolbarSpacer />
                    <Select
                        forceSelection="false"
                        selectedKey="{userSelectionModel>/Strains}"
                        type="IconOnly"
                        icon="sap-icon://filter"
                        autoAdjustWidth="true"
                        items="{
						path: '/Strains',
						sorter: { path: 'description' }
					}"
                    >
                        <core:Item
                            key="{stainID}"
                            text="{name}"
                        />
                    </Select>
                </Toolbar>
            </footer>
        </Page>
    </App>
</mvc:View>
